{
  "project": {
    "name": "runebar",
    "description": "Harnessing LLM capabilities to enhance productivity and creativity",
    "type": "electron-react-app"
  },
  "framework": {
    "ui": "react",
    "state": {
      "global": "zustand",
      "server": "@tanstack/react-query"
    },
    "router": "@tanstack/react-router",
    "styling": "tailwindcss",
    "components": {
      "ui": "shadcn/ui",
      "base": "radix-ui"
    }
  },
  "electron": {
    "forge": true,
    "buildTool": "vite"
  },
  "development": {
    "linter": "biome",
    "formatter": "biome",
    "testing": {
      "unit": "vitest",
      "e2e": "playwright"
    },
    "commitLint": true
  },
  "structure": {
    "src": {
      "components": "UI组件",
      "helpers": "辅助函数",
      "hooks": "自定义React钩子",
      "layouts": "页面布局组件",
      "localization": "国际化文件",
      "pages": "页面组件",
      "providers": "上下文提供者",
      "routes": "路由定义",
      "store": "状态管理",
      "styles": "样式文件",
      "tests": "测试文件",
      "types": "类型定义",
      "utils": "通用工具函数"
    }
  }
}
